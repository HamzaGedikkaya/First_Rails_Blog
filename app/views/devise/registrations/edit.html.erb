  <%#! EDIT PROFILE PAGE %>
<body class="devise-body">
  <div class="devise-container d-flex justify-content-center align-items-center ">
    <div class="devise">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field">
          <%= image_tag('user-icon.png', alt: 'user icon', class: 'user-icon')%>
          <h2 class="mx-5">Account Settings</h2> 
      </div>  <br>

        <div class="field mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"devise-input", placeholder:"E-Mail" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-1">
          <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", class:"devise-input", placeholder:"New Password" %>
          <% end %>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"devise-input", placeholder:"New Password Confirmation" %>
        </div> 

        <div class="field mb-2">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"devise-input", placeholder:"Current Password"  %>
        </div>

        <div class="field-check">
          <%= link_to "Back", :back %>
          <%= f.submit "Update", class:"login-button register-button" %>
        </div>
      <% end %>

      <div class="mb-2">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "login-button cancel-button" %>
      </div>
    </div>
  </div>
</body>