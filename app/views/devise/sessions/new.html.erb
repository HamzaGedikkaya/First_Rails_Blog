  <%#! LOGIN PAGE %>
<body class="devise-body">
  <div class="devise-container">
    <div class="devise">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="field">
        <%= image_tag('user-icon.png', alt: 'user icon', class: 'user-icon')%>
        <h2>Log in</h2>
        </div> <br>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class:"devise-input" %>
        </div> <br>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"devise-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
          </div>
        <% end %>

        <div class="pb-4">
          <%= f.submit "Log in", class:"login-button"%>
        </div>
      <% end %>
      
    </div>
  </div>
</body>